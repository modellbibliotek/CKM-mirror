definition
	CLUSTER[at0000.1] matches {    -- Common Terminology Criteria for Adverse Events (CTCAE) with generic grades
		items cardinality matches {1..*; unordered} matches {
			ELEMENT[at0001] occurrences matches {0..1} matches {    -- System Organ Class (SOC)
				value matches {
					DV_CODED_TEXT matches {*}
				}
			}
			ELEMENT[at0002] occurrences matches {0..1} matches {    -- Term
				value matches {
					DV_TEXT matches {*}
					DV_CODED_TEXT matches {
						defining_code matches {
							[ac0001]
						}
					}
				}
			}
			ELEMENT[at0003.1] matches {    -- Grade
				value matches {
					1|[local::at0.1],
					2|[local::at0.2],
					3|[local::at0.3],
					4|[local::at0.4],
					5|[local::at0.5]
				}
			}
			ELEMENT[at0009] occurrences matches {0..1} matches {    -- CTCAE version
				value matches {
					DV_TEXT matches {*}
				}
			}
			ELEMENT[at0.6] occurrences matches {0..1} matches {    -- Description of grade
				value matches {
					DV_TEXT matches {*}
				}
			}
		}
	}

